# EditorConfig helps maintain consistent coding styles for multiple developers
# working on the same project across various editors and IDEs
# https://editorconfig.org

# Top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 100

# Markdown files
[*.md]
max_line_length = off
trim_trailing_whitespace = false

# HTML files
[*.{html,htm}]
indent_size = 2

# CSS, SCSS, LESS
[*.{css,scss,less}]
indent_size = 2

# JavaScript, TypeScript, JSX, TSX
[*.{js,jsx,ts,tsx}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# Shell scripts
[*.sh]
end_of_line = lf

# Windows batch files
[*.{cmd,bat}]
end_of_line = crlf

# Git config files
[.git*]
indent_style = tab

# Package.json
[package.json]
indent_size = 2

# GraphQL
[*.graphql]
indent_size = 2